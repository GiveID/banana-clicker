<Window x:Class="bananaclicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BananaClicker"
        Height="360"
        Width="440"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Loaded="Window_Loaded">

    <Window.Resources>

        <!-- Neon Glow -->
        <DropShadowEffect x:Key="GlowEffect"
                          Color="Yellow"
                          BlurRadius="15"
                          ShadowDepth="0"
                          Opacity="0.8"/>

        <!-- Modern Rounded Button -->
        <Style TargetType="Button" x:Key="SexyButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#44485A"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5D6078"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" Color="Lime" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#383B4F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Border CornerRadius="15" Background="#D91E1E2F" BorderBrush="#444" BorderThickness="1" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <DockPanel Grid.Row="0" Height="40" Background="#2B2E40" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="🍌 Banana Clicker"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Effect="{StaticResource GlowEffect}"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Content="—" Width="30" Height="30" Click="Minimize_Click" Style="{StaticResource SexyButton}" Margin="0,0,5,0"/>
                    <Button Content="✕" Width="30" Height="30" Click="Close_Click" Style="{StaticResource SexyButton}"/>
                </StackPanel>
            </DockPanel>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" Margin="30,20,30,30" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Interval (ms):" Foreground="White" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="IntervalBox" Width="100" Text="6" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Toggle Hotkey:" Foreground="White" Width="120" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ToggleKeyBox" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Content="Start" Click="Start_Click" Width="100" Margin="0,0,10,0" Style="{StaticResource SexyButton}"/>
                    <Button Content="Stop" Click="Stop_Click" Width="100" Style="{StaticResource SexyButton}"/>
                </StackPanel>

                <TextBlock x:Name="StatusLabel" Text="Status: Idle" Foreground="Lime" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Text="Press your toggle key to start/stop (default: J)." Foreground="Gray" FontSize="12"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
